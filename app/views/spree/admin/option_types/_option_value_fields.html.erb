<tr class="option_value fields" id="<%= spree_dom_id(f.object) %>"  data-hook="option_value">
  <td width="14">
    <span class="icon-move handle"></span>
  </td>
  <td class="name">
    <%= f.text_field :name %>
  </td>
  <td class="presentation"><%= f.text_field :presentation %></td>
  <td><%= image_tag f.object.image.url(:small) if f.object.has_image? %></td>
  <td><%= f.file_field :image %></td>
  <td class="actions"><%= link_to_remove_fields t(:remove), f, :no_text => true %></td>
</tr>
